<h1>Home</h1>

<p>Welcome</p>

<% if user_signed_in? %>
   <%= current_user.profile.username || current_user.email %>
<br>
<p>Visit your profile here</p>
<%= link_to 'Profile', profile_path(current_user.profile) %>
<%= link_to 'Home', root_path %>
<%= link_to 'Posts', posts_path %>
<%= button_to 'Log out', destroy_user_session_path, method: :delete %>

<% end %>

<br>

<h3>Last New Users</h3>

<div>
<% @users.each do |user| %>
    <ul>
        <li><%= user.email %></li>
    </ul>
<% end %>
</div>

<h3>Last New Posts</h3>

<div>
<% @posts.each do |post| %>
    <ul>
        <li><%= post.content %> - <%= link_to post.user.profile.username, profile_path(post.user.profile) %></li>
    </ul>
<% end %>
</div>