<div>
<%= @profile.name %>

<%= @profile.username %>

<%= @profile.user.email %>
</div>

<%= link_to 'Edit Profile', edit_profile_path(@profile)  %>
<br><br>
<%= button_to 'Delete Account', @profile, method: :delete,
data: { turbo_confirm: "Are you sure?"}  %>

<% if current_user == @profile.user %>
<h3>Create Post</h3>

<%= render 'posts/form', post: @post %>
<% end %>

<br>
<h3><%= @profile.name %> Posts</h3>

<% @posts.each do |post|%>
<ul>
    <li><%= post.content %>
    <%= button_to 'Delete Post', post, method: :delete,
    data: {turbo_confirm: "Are you sure"} if current_user == @profile.user %>
    </li>

    <% post.comments.each do |comment| %>
        <%= comment.comment %> -- <%= comment.user.profile.username %>
    <% end %>
</ul>
<% end %>

<br>
<%= link_to 'Back to Home', root_path %>